{
  "name": "beacon",
  "version": "1.0.0",
  "description": "Beacon - A minimalist dynamic DNS service with Cloudflare integration",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"tsx src/server.ts\"",
    "build": "tsc && tsc public/client.ts --outFile public/client.js --target ES2022",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "dotenv": "^17.2.0",
    "express": "^4.18.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
